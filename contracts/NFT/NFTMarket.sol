    function safeApprove(
        IERC20 token,
        address spender,
        uint256 value
    ) internal {
        // safeApprove should only be called when setting an initial allowance,
        // or when resetting it to zero. To increase and decrease it, use
        // 'safeIncreaseAllowance' and 'safeDecreaseAllowance'
        require(
            (value == 0) || (token.allowance(address(this), spender) == 0),
            "SafeERC20: approve from non-zero to non-zero allowance"
        );
        _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, value));
    }

    function safeIncreaseAllowance(
        IERC20 token,
        address spender,
        uint256 value
    ) internal {
        uint256 newAllowance = token.allowance(address(this), spender) + value;
        _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, newAllowance));
    }

    function safeDecreaseAllowance(
        IERC20 token,
        address spender,
        uint256 value
    ) internal {
//    unchecked {
        uint256 oldAllowance = token.allowance(address(this), spender);
        require(oldAllowance >= value, "SafeERC20: decreased allowance below zero");
        uint256 newAllowance = oldAllowance - value;
        _callOptionalReturn(token, abi.encodeWithSelector(token.approve.selector, spender, newAllowance));
//    }
    }

    /**
     * @dev Imitates a Solidity high-level call (i.e. a regular function call to a contract), relaxing the requirement
     * on the return value: the return value is optional (but if data is returned, it must not be false).
     * @param token The token targeted by the call.
     * @param data The call data (encoded using abi.encode or one of its variants).
     */
    function _callOptionalReturn(IERC20 token, bytes memory data) private {
        // We need to perform a low level call here, to bypass Solidity's return data size checking mechanism, since
        // we're implementing it ourselves. We use {Address.functionCall} to perform this call, which verifies that
        // the target address contains contract code and also asserts for success in the low-level call.

        bytes memory returndata = address(token).functionCall(data, "SafeERC20: low-level call failed");
        if (returndata.length > 0) {
            // Return data is optional
            require(abi.decode(returndata, (bool)), "SafeERC20: ERC20 operation did not succeed");
        }
    }
}

interface ILootbox{
    function buyOfficial(address to, uint256 tokenType) external returns(uint256 tokenId);
    function uniqueTokenInfo(uint256 tokenId) external view returns (string memory, string memory);
}


interface IEquipment {
    
    function uniqueTokenInfo(uint256 tokenId) external view returns (string memory, string memory);
}



contract NftMarket is IERC721Receiver, ReentrancyGuard, Ownable {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    /// @notice individual sale related data
    struct SalesObject {
        uint256 id;               // sales ID
        uint256 index;            // sales index of sales list
        uint256 tokenId;          // token unique id
        address payable seller;   // seller address
        address nft;              // nft address
        uint256 startTime;        // timestamp when the sale starts
        uint256 price;            // nft price
        string tokenName;         // token name
        string tokenUri;               // token uri
    }

    /// @dev keep count of SalesObject amount
    uint256 public salesAmount;

    /// @dev blind box price
    uint256 public blindBoxPrice;

    /// @dev store sales objects.
    SalesObject[] salesObjects;

    /// @notice enable/disable trading
    bool public salesEnabled;

    /// @dev fee rate and fee reciever. feeAmount = (feeRate / 1000) * price
    uint256 public feeRate;
    address payable feeReceiver;

    address public equipment;
    address public blindBox;
    
    mapping(address => uint256[]) private salesOf;

    event Buy(
        uint256 indexed id,
        uint256 tokenId,
        address indexed buyer,
        uint256 price,
        uint256 tipsFee
    );

    event Sell(
        uint256 indexed id,
        uint256 tokenId,
        address indexed seller,
        address indexed buyer,
        address nftAddress,
        uint256 startTime,
        uint256 price
    );

    event SaleCanceled(uint256 indexed id, uint256 tokenId);
    event NftReceived(address operator, address from, uint256 tokenId, bytes data);

    /// @dev set fee reciever address and fee rate
    /// @param _feeReceiver fee receiving address
    /// @param _feeRate fee amount
    constructor(address payable _feeReceiver, uint256 _feeRate) public {
        feeReceiver = _feeReceiver;
        feeRate = _feeRate;
    }

    /// @notice enable/disable sales
    /// @param _salesEnabled set sales to true/false
    function enableSales(bool _salesEnabled) external onlyOwner { salesEnabled = _salesEnabled; }

    /// @notice change fee receiver address
    /// @param _walletAddress address of the new fee receiver
    function setFeeReceiver(address payable _walletAddress) external onlyOwner {
        require(_walletAddress != address(0x0), "invalid address");
        feeReceiver = _walletAddress;
    }

    /// @notice change fee rate
    /// @param _rate amount value. Actual rate in percent = _rate / 10
    function setFeeRate(uint256 _rate) external onlyOwner {
        require(_rate <= 100, "Rate should be bellow 100 (10%)");
        feeRate = _rate;
    }

    /// @notice change blind box contract6
    function setBlindBox(address blindBox_) external onlyOwner {
        require(blindBox_ != address(0), "Blind box address can not be zero");
        blindBox = blindBox_;
    }

    /// @notice change blind box price
    function setBlindBoxPrice(uint256 _price) external onlyOwner {
        blindBoxPrice = _price;
    }

    /// @notice returns sales list
    /// @return all of sales objects
    function getSalesList() external view returns(SalesObject[] memory) {
        return salesObjects;
    }
    
    /// @notice returns uint[] of 'account'
    /// @return all of sales ids array
    function getSaleIndexesOf(address account) public view returns(uint256[] memory) {
        return salesOf[account];
    }
    
    /// @notice returns salesObject
    /// @return all of sales info
    function getSaleInfo(uint256 id) external view returns(SalesObject memory) {
        return salesObjects[id];
    }

    /// @dev encrypt token data
    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes memory data
    )
    public override returns (bytes4) {
        //only receive the _nft staff
        if (address(this) != operator) {
            //invalid from nft
            return 0;
        }

        //success
        emit NftReceived(operator, from, tokenId, data);
        return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
    }

    /// @notice put nft for sale
    /// @param _tokenId nft unique ID
    /// @param _price required price to pay by buyer. Seller receives less: price - fees
    /// @return salesAmount total amount of sales
    function sell(uint256 _tokenId, uint256 _price, address nftAddress) public nonReentrant returns(uint) {
        require(salesEnabled, "sales are closed");
        IERC721(nftAddress).safeTransferFrom(msg.sender, address(this), _tokenId);
        string memory tokenUri;
        string memory tokenName;
        if(nftAddress == blindBox){
            (tokenUri, tokenName) = ILootbox(nftAddress).uniqueTokenInfo(_tokenId);
        } else {
            (tokenUri, tokenName) = IEquipment(nftAddress).uniqueTokenInfo(_tokenId);
        }
        uint256 saleId = salesAmount;
        uint256 saleIndex = salesObjects.length;
        salesObjects.push(
            SalesObject(
                saleId,
                saleIndex,
                _tokenId,
                msg.sender,
                nftAddress,
                now,
                _price,
                tokenName,
                tokenUri
            )
        );
        emit Sell(
            saleId,
            _tokenId,
            msg.sender,
            address(0x0),
            nftAddress,
            now,
            _price
        );
        uint256[] storage saleIndexes = salesOf[msg.sender];
        saleIndexes.push(saleIndex);
        salesAmount++;
        return salesAmount;
    }

    /// @notice cancel nft sale
    /// @param _saleIndex nft unique ID
     function cancelSell(uint _saleIndex) public nonReentrant {
        require(salesEnabled, "sales are closed");
        SalesObject storage obj = salesObjects[_saleIndex];
        require(obj.seller == msg.sender, "seller not nft owner");
        
        
        IERC721 nftContract = IERC721(obj.nft);
        nftContract.safeTransferFrom(address(this), obj.seller, obj.tokenId);
        
        changeIndex(_saleIndex);
        emit SaleCanceled(_saleIndex, obj.tokenId);
    }
    
    function changeIndex(uint _saleIndex) private {
        address seller1 = salesObjects[_saleIndex].seller;
        uint256[] storage indexes1 = salesOf[seller1];
        for(uint256 i = 0; i < indexes1.length; i++){
            if(indexes1[i] == _saleIndex){
                indexes1[i] = indexes1[indexes1.length - 1];
                indexes1.pop();
                break;
            }
        }
        salesObjects[_saleIndex] = salesObjects[salesObjects.length - 1];
        salesObjects[_saleIndex].index = _saleIndex;
        address seller2 = salesObjects[_saleIndex].seller;
        uint256[] storage indexes2 = salesOf[seller2];
        for(uint256 i = 0; i < indexes2.length; i++){
            if(indexes2[i] == salesObjects.length - 1){
                indexes2[i] = _saleIndex;
            }
        }
        salesObjects.pop();
    }

    /// @notice buy nft
    /// @param _saleIndex nft unique ID
    function buy(uint _saleIndex) public nonReentrant payable {
        require(salesEnabled, "sales are closed");
        SalesObject storage obj = salesObjects[_saleIndex];
        require(obj.startTime <= now, "not yet for sale");
        require(msg.sender != obj.seller, "cant buy from yourself");

        uint256 price = obj.price;
        uint256 tipsFee = price.mul(feeRate).div(1000);
        uint256 purchase = price.sub(tipsFee);

        require (msg.value >= price, "your price is too low");
        if (tipsFee > 0){
            feeReceiver.transfer(tipsFee);
        }
        obj.seller.transfer(purchase);

        IERC721 nftContract = IERC721(obj.nft);
        nftContract.safeTransferFrom(address(this), msg.sender, obj.tokenId);

        changeIndex(_saleIndex);
        emit Buy(obj.id, obj.tokenId, msg.sender, price, tipsFee);
    }

    /// @param blindBoxType type
    function buyOfficial(uint256 blindBoxType) public nonReentrant payable {
        require(msg.value >= blindBoxPrice, "your price is too low");
        require(salesEnabled, "sales are closed");
        feeReceiver.transfer(blindBoxPrice);
        ILootbox blindBoxContract = ILootbox(blindBox);
        uint256 tokenId = blindBoxContract.buyOfficial(msg.sender, blindBoxType);
        
        string memory tokenUri;
        string memory tokenName;
        (tokenUri, tokenName) = ILootbox(blindBox).uniqueTokenInfo(tokenId);
        
        emit Sell(
            salesAmount,
            tokenId,
            blindBox,
            msg.sender,
            address(0),
            now,
            blindBoxPrice
        );
        emit Buy(
            salesAmount, 
            tokenId, 
            msg.sender, 
            blindBoxPrice, 
            0
        );
        salesAmount++;
    }

    receive() external payable{}
}